{
  "name": "alwinsden-unified-web",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for alwinsden.com (docs + main site)",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20.0"
  },
  "scripts": {
    "postinstall": "node scripts/link-node-modules.cjs",
    "build": "pnpm run build:docs && pnpm run build:cloudflare",
    "build:docs": "cd packages/alwinsden-docs && docusaurus build --out-dir ../../dist/docs",
    "build:cloudflare": "cd packages/alwinsden-cloudflare && vite build",
    "dev:docs": "cd packages/alwinsden-docs && docusaurus start",
    "dev:cloudflare": "cd packages/alwinsden-cloudflare && vite",
    "serve:docs": "cd packages/alwinsden-docs && docusaurus serve",
    "preview:cloudflare": "cd packages/alwinsden-cloudflare && vite preview",
    "lint:cloudflare": "cd packages/alwinsden-cloudflare && eslint ."
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "lucide": "^0.512.0",
    "lucide-react": "^0.512.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-fast-marquee": "^1.6.5",
    "react-router": "^7.6.1"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "browserslist": {
    "production": [">0.5%", "not dead", "not op_mini all"],
    "development": ["last 3 chrome version", "last 3 firefox version", "last 5 safari version"]
  }
}
